
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Online Ticari Otomasyon | MVC5</title>
    <!-- custom-theme -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Project Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
               function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //custom-theme -->
    <!-- Google fonts -->
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&amp;subset=latin-ext" rel="stylesheet">
    <!-- Google fonts -->
    <!-- css files -->
    <link href="~/weblogin/css/style.css" type="text/css" rel="stylesheet" media="all">
    <!-- //css files -->

    <link rel="stylesheet" href="~/weblogin/css/font-awesome.css"> <!-- Font-Awesome-Icons-CSS -->

    <link href="~/weblogin/css/popup-box.css" rel="stylesheet" type="text/css" media="all" /> <!-- popup box css -->

    <link rel="Shortcut Icon" href="~/image/teamwork.png" type="image/x-icon">

</head>
<!-- body starts -->
<body>

    <!-- section -->
    <section class="register">
        <div class="header">
            <div class="logo">
                <a href="#">GİRİŞ FORMU</a>
            </div>
            <div class="social">
                <li><a href="https://github.com/smyy96"><span class="fa fa-github"></span></a></li>
                <li><a href="https://www.youtube.com/channel/UCetYprH_qNb6ncE3xgTQGug"><span class="fa fa-youtube"></span></a></li>
                <li><a href="https://www.linkedin.com/in/sümeyye-coşkun-67140b159/"><span class="fa fa-linkedin"></span></a></li>
                <li><a href="#"><span class="fa fa-google-plus"></span></a></li>
            </div>
            <div class="clear"></div>
        </div>

        <div class="register-full">
            <div class="register-left">
                <div class="register">
                    <p>Online Ticari Otomasyon</p>
                    <h1>Asp.Net Mvc5 İle</h1>
                    <h2>Dinamik Web Projesi Geliştime  </h2>
                    <p>
                        Admin, Personel kişisel sayfası ve cari kişisel sayfası olmak üzere 3 tane temel yapımız bulunmaktadır.
                        Giriş yapmak istediğiniz yetki durumunuza göre sağ taraftan ilgili menüyü seçin.
                    </p>
                    @*<div class="content3">
                        <ul>
                            <li><a class="" href="#">Firmalar</a></li>
                            <li><a class="read" href="#">Ürünlerimiz</a></li>
                        </ul>
                    </div>*@
                </div>
            </div>
            <div class="register-right">
                <div class="register-in">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog2">Kayıt Ol  »</a>
                </div>
                <div class="register-in middle">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog">CARİ GİRİŞİ  »</a>
                </div>
                <div class="register-in">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog1">PERSONEL GİRİŞİ »</a>
                </div>
                <div class="clear"> </div>
            </div>
            <div class="clear"> </div>
        </div>
    </section>
    <!-- //section -->
    <!-- login form popup-->
    <div class="pop-up">
        <div id="small-dialog" class="mfp-hide book-form">

            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>Cari Giriş Formu</h3>
                    <span class="fa fa-lock"></span>
                    <div class="clear"></div>
                    <div class="login-agileits-top">
                        @using (Html.BeginForm("CariLogin1", "Login", FormMethod.Post))
                        {
                            <input type="text" class="name" name="CariMail" Placeholder="Mail Adresiniz" required="" />
                            <input type="password" class="password" name="CariSifre" Placeholder="Şifreniz" required="" />
                            <input type="submit" value="Giriş Yap">
                        }
                    </div>
                    @*<div class="login-agileits-bottom">
                        <h6><a href="#">Şifremi Unuttum?</a></h6>
                    </div>*@
                </div>
            </div>

        </div>

    </div>
    <!-- //login form popup-->
    <!-- subscribe form popup-->
    <div class="pop-up">
        <div id="small-dialog1" class="mfp-hide book-form">

            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>Personel Giriş Formu</h3>
                    <p>İyi Çalışmalar ☺ </p>
                    <div class="clear"></div>
                    <div class="login-agileits-top">
                        @using (Html.BeginForm("AdminLogin", "Login", FormMethod.Post))
                        { 
                        <input type="text" class="name" name="KullaniciAd" Placeholder="Kullanıcı Adı" required="" />
                        <input type="password" class="password" name="Sifre" Placeholder="Şifreniz" required="" />
                        <input type="submit" value="Giriş Yap">
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- //subscribe form popup-->
    <!-- register form popup-->
    <div class="pop-up">
        <div id="small-dialog2" class="mfp-hide book-form">

            @Html.Action("Partial1","Login")

        </div>
    </div>
    <!-- //register form popup-->
    <!-- js -->
    <script type="text/javascript" src="~/weblogin/js/jquery-2.1.4.min.js"></script>
    <!-- //js -->
    <!--popup-js-->
    <script src="~/weblogin/js/jquery.magnific-popup.js" type="text/javascript"></script>
    <script>
	$(document).ready(function() {
	$('.popup-with-zoom-anim').magnificPopup({
		type: 'inline',
		fixedContentPos: false,
		fixedBgPos: true,
		overflowY: 'auto',
		closeBtnInside: true,
		preloader: false,
		midClick: true,
		removalDelay: 300,
		mainClass: 'my-mfp-zoom-in'
	});

	});
    </script>
    <!--//popup-js-->

</body>
<!-- //body ends -->
</html>
