@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<table class="table table-striped">
    <tr>

        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>ŞEHİR</th>
        <th>TELEFON</th>
        <th>MESLEK</th>
        <th>MAİL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>

            <td>@x.CariId</td>
            <td>@x.CariAd</td>
            <td>@x.CariSoyad</td>
            <td>@x.CariSehir</td>
            <td>@x.Telefon</td>
            <td>@x.Meslek</td>
            <td>@x.CariMail</td>
            <td><a href="/Cari/CariSil/@x.CariId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Cari/CariGetir/@x.CariId" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Cari/MusteriSatis/@x.CariId" class="btn btn-default" style="background-color: darkslateblue; color:white">Satış Geçmişi</a></td>

        </tr>

    }
</table>
<a href="/Cari/YeniCari/" class="btn btn-dark">Yeni Cari Ekle</a>

