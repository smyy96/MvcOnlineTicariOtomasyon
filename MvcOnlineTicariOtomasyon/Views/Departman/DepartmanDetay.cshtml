@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.d</li>
</ol>

<table class="table table-hover">
    <tr>
        
        <th>AD</th>
        <th>SOYAD</th>
        <th>GÖRSEL</th>
        <th>SATIŞLAR</th>


    </tr>
    @foreach (var x in Model)
    {
        <tr>
            
            <td>@x.PersonelAd</td>
            <td>@x.PersonelSoyad</td>
            <td><img src="@x.PersonelGorsel" style="width:50px;height:50px;" /></td>
            <td><a href="/Departman/DepartmanPersonelSatis/@x.PersonelId" class="btn btn-default" style="background-color:cornflowerblue">Satışlar</a></td>

        </tr>

    }

</table>