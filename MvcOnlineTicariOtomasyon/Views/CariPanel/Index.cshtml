@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Mesajlar>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}


<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | User Profile</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Profilim</h1>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-3">
                        <!-- Profile Image -->
                        <div class="card card-primary card-outline">
                            <div class="card-body box-profile">
                                <div class="text-center">
                                    <img class="profile-user-img img-fluid img-circle"
                                         src="~/AdminLTE-3.0.4/dist/img/mus.png"
                                </div>
                             
                                    <h3 class="profile-username text-center">@ViewBag.adsoyad</h3>
                                    <p class="text-muted text-center">@ViewBag.mail</p>
                              
                               <ul class="list-group list-group-unbordered mb-3">
                                    <li class="list-group-item">
                                        <b>Toplam Satış</b> <a class="float-right"> @ViewBag.toplamsatis</a>
                                    </li>
                                    <li class="list-group-item">
                                        <b>Toplam Satış Tutarı: </b> <a class="float-right">@ViewBag.toplamtutar ₺</a>
                                    </li>
                                    <li class="list-group-item">
                                        <b>Toplam Ürün: </b> <a class="float-right">@ViewBag.toplamurun</a>
                                    </li>
                                </ul>
                                <a href="/CariPanel/KargoTakip/" class="btn btn-primary btn-block"><b>Kargo Takip</b></a>
                            </div>
                        </div>
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Hakkımda</h3>
                            </div>
                            <div class="card-body">
                                <strong><i class="fas fa-book mr-1"></i> Meslek</strong>
                                <p class="text-muted">
                                    @ViewBag.meslek
                                </p>
                                <hr>
                                <strong><i class="fas fa-map-marker-alt mr-1"></i> Şehir</strong>
                                <p class="text-muted">@ViewBag.sehir</p>
                                <hr>
                                <strong><i class="fas fa-pencil-alt mr-1"></i> Telefon</strong>
                                <p class="text-muted">@ViewBag.telefon</p>
                                <hr>
                                <strong><i class="far fa-file-alt mr-1"></i> Duyurular</strong>
                                <p class="text-muted">Yeni ürünleri görmek için mağazalarımızı ziyaret edin.</p>
                            </div>
                            
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="card">
                            <div class="card-header p-2">
                                <ul class="nav nav-pills">
                                    <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Mesajlar</a></li>
                                    <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Duyurular</a></li>
                                    <li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab">Ayarlar</a></li>
                                </ul>
                            </div><!-- /.card-header -->
                            <div class="card-body">
                                <div class="tab-content">
                                    <div class="active tab-pane" id="activity">
                                        @foreach (var x in Model)
                                        {
                                             <div class="post">
                                                 <div class="user-block">
                                                     <img class="img-circle img-bordered-sm" src="~/AdminLTE-3.0.4/dist/img/Martz90-Circle-Messages.ico" alt="user image">
                                                     <span class="username">
                                                         <a href="#">@x.Gonderici</a>
                                                         <a href="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>
                                                     </span>
                                                     <span class="description">@x.Konu - @x.Tarih</span>
                                                 </div>
                                            <p>@x.icerik </p>
                                        </div>
                                        }
                                   </div>
                                    <div class="tab-pane" id="timeline">

                                        @Html.Action("Partial2", "CariPanel")

                                    </div>

                                    <div class="tab-pane" id="settings">
                                       
                                        @Html.Action("Partial1","CariPanel")

                                    </div>
                                </div>
                            </div><!-- /.card-body -->
                        </div>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

    </div>
    <aside class="control-sidebar control-sidebar-dark">

    </aside>
    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
</body>
</html>
